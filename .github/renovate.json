{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "labels": ["dependencies"],
  "packageRules": [
    {
      "matchPackagePatterns": [
        "com.android.library",
        "com.android.application"
      ],
      "groupName": "Android Gradle Plugin"
    },
    {
      "matchPackagePatterns": [
        "androidx.compose.*"
      ],
      "groupName": "compose"
    },
    {
      "matchPackagePatterns": [
        "composeOptions",
        "org.jetbrains.kotlin.*"
      ],
      "groupName": "Kotlin & Compose Compiler"
    },
  ]
}
